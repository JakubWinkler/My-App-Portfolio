<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#DEEAF1">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/btnSpotifyStreamer"
        android:background="#F08C35"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="startSpotifyStreamer" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/btnScoresApp"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnSpotifyStreamer"
        android:layout_alignParentEnd="true"
        android:onClick="startScoresApp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/btnLibraryApp"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnScoresApp"
        android:layout_alignParentEnd="true"
        android:onClick="startLibraryApp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:id="@+id/btnBuildItBigger"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnLibraryApp"
        android:layout_alignParentEnd="true"
        android:onClick="startBuildItBigger"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/btnXYZReader"
        android:background="#F08C35"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_alignParentEnd="true"
        android:onClick="startXYZReader"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/btnCapstoneApp"
        android:background="#CB1541"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnXYZReader"
        android:layout_alignParentEnd="true"
        android:onClick="startCapstoneApp" />

</RelativeLayout>
